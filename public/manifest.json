{
  "manifest_version": 3,
  "name": "Helpme out",
  "description": "Enable users to take a screen recording of their screen.",
  "version": "1.0.1",

  "icons": {
    "128": "icon.png"
  },

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["activeTab", "scripting", "tabs"],

  "host_permissions": ["http://*/*", "https://*/*"]
}
